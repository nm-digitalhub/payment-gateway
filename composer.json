{
    "name": "nmdigitalhub/payment-gateway",
    "description": "Advanced Payment Gateway Package for Laravel with eSIM-based unified checkout, slug routing, CardCom API v11, Maya Mobile, and ResellerClub Integration",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "payment",
        "gateway",
        "cardcom",
        "maya-mobile",
        "resellerclub",
        "filament",
        "esim",
        "domains",
        "israel",
        "hebrew",
        "slug-routing",
        "unified-checkout",
        "package-manager",
        "rtl-support"
    ],
    "authors": [
        {
            "name": "NM Digital Hub",
            "email": "support@nm-digitalhub.com",
            "homepage": "https://nm-digitalhub.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.0|^12.0",
        "filament/filament": "^3.0",
        "filament/forms": "^3.0",
        "filament/tables": "^3.0",
        "filament/actions": "^3.0",
        "filament/notifications": "^3.0",
        "filament/support": "^3.0",
        "spatie/laravel-settings": "^3.0",
        "spatie/laravel-enum": "^3.0",
        "spatie/laravel-package-tools": "^1.16",
        "guzzlehttp/guzzle": "^7.0",
        "ramsey/uuid": "^4.0",
        "symfony/uid": "^6.0|^7.0",
        "nesbot/carbon": "^2.0|^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0|^9.0",
        "phpunit/phpunit": "^10.0|^11.0",
        "mockery/mockery": "^1.4",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "larastan/larastan": "^2.0",
        "rector/rector": "^0.18"
    },
    "autoload": {
        "psr-4": {
            "NMDigitalHub\\PaymentGateway\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "NMDigitalHub\\PaymentGateway\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "analyse": "vendor/bin/phpstan analyse",
        "format": "vendor/bin/rector --dry-run",
        "format-fix": "vendor/bin/rector",
        "install-package": "php artisan payment-gateway:install",
        "post-autoload-dump": [
            "@php artisan package:discover --ansi"
        ],
        "post-install-cmd": [
            "@php artisan payment-gateway:install --force --no-interaction"
        ],
        "post-update-cmd": [
            "@php artisan payment-gateway:install --force --no-interaction"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "NMDigitalHub\\PaymentGateway\\PaymentGatewayServiceProvider"
            ],
            "aliases": {
                "Payment": "NMDigitalHub\\PaymentGateway\\Facades\\Payment"
            }
        },
        "branch-alias": {
            "dev-main": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "support": {
        "issues": "https://github.com/nmdigitalhub/payment-gateway/issues",
        "source": "https://github.com/nmdigitalhub/payment-gateway",
        "docs": "https://nm-digitalhub.com/docs/payment-gateway"
    },
    "funding": [
        {
            "type": "custom",
            "url": "https://nm-digitalhub.com"
        }
    ]
}